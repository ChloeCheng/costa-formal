/* pages/share/index.wxss */
.share-container{
  width: 100%;
  height: 100vh;
  background-size:100% 100%;
}
.share-bg{
  width: 100%;
  height: 100vh;
}
.bg-image{
  width:100%;
  height:100vh;
  position:fixed;
  z-index:-1;
}
.bg-image > image{
  width: 100%;
  height: 100%;
}

.content{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  height: 100vh;
  color: white;
}
.content image{
  width: 300rpx;
}
.content .title{
  font-size: 50rpx;
}
.content .txt{
  font-size:32rpx;
  margin: 20rpx auto;
}
.content button{
  width: 90%;
  font-size:32rpx;
  margin: 20rpx auto;
  color: white;
  background-color: #9e0028;
}

.share-tips{
  padding-top:40rpx;
  height: 100rpx;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  color: white;
  background-color:rgba(0,0,0,0.2) ;
  font-size: 32rpx;
}