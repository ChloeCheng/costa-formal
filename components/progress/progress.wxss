.progress-cover, .dialog-cover {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 200;
  background: rgba(0, 0, 0, 0.4);
}

.progress-dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 201;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: transparent;
  border-radius: 10rpx;
  text-align: center;
}

.progress-dialog button {
  font-size: 32rpx;
  color: #3d3c40;
  background: #fff;
  border: 0;
  outline: none;
  border-radius: none;
  padding: 20rpx;
}

.progress-dialog button:visited, .progress-dialog button:focus {
  outline: none;
  border-radius: none;
  border: 1rpx solid transparent;
}

button.u-login-wx::after {
  border: 0;
}

.progress-block {
  position: relative;
  z-index: 100;
  padding: 60rpx;
}

.icon-close {
  position: absolute;
  right: -30rpx;
  top: -40rpx;
  padding:0 20px;
  z-index:1;

}

.icon-close image {
  width: 40rpx;
  height: 80rpx;
}

.progress-bg {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
}

.icon-logo {
  text-align: center;
  padding: 6rpx;
}

.icon-logo image {
  width: 100rpx;
  height: 200rpx;
  margin: 0;
  padding: 0;
  float: left;
}

.content-top {
  display: flex;
  align-items: center;
}

.content-top .icon-logo {
  width: 100rpx;
}

.bg-image image {
  width: 100%;
}

.des-text-block {
  font-size: 12px;
  color: white;
}

.btn-detail {
  border-radius: 8rpx;
  display: inline-block;
  margin: 0 auto;
  font-size: 12px;
  color: white;
  margin-top: 10px;
  padding: 2px 20px;
  background: rgba(0, 0, 0, 0.2);
}

.ct-right {
  height: 100rpx;
  margin-left: 40rpx;
}

.ct-right image {
  width: 140px;
  height: 120rpx;
}

.ct-right-icon {
  margin-top: 10px;
  text-align: left;
}

.ct-right-icon image {
  width: 40rpx;
  height: 40rpx;
}

.image-item {
  display: inline-block;
}

.text-num {
  text-align: left;
  font-size: 16px;
  margin-bottom: 10px;
}

.text-num .text-num-left {
  font-size: 30px;
}
.content-right{
